doctype html
head
  style
    include style.css
nav.navbar.navbar-light.navbar-expand-lg.fixed-top.bg-white.portfolio-navbar
  .container
    a.navbar-brand.logo(href='/') Bot Dashboard
    button.navbar-toggler(data-toggle='collapse', data-target='#navbarNav')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.nav.navbar-nav.ml-auto
        li.nav-item.item
          a.nav-link.active(href='/') Home
        li.nav-item.item
          if !user
            a.nav-link.active(href='/login') Login
        li.nav-item.dropdown
          if user
            a.nav-link.active.dropdown-toggle(href="/" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              img.round.mr-2(src=user.avatarUrl(32))
              | #{user.username}

          .dropdown-menu
            a.dropdown-item(href="/dashboard") Dashboard
            .dropdown-divider
            a.dropdown-item(href="/logout") Logout